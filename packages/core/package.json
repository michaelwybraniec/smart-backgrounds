{
  "name": "@smart-backgrounds/core",
  "version": "0.0.1",
  "description": "Core engine for smart backgrounds - plugin system and event bus",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
