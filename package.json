{
  "name": "smart-backgrounds",
  "version": "0.0.0",
  "private": true,
  "description": "Modular library of stunning, interactive, and intelligent backgrounds for websites",
  "keywords": [
    "backgrounds",
    "three.js",
    "webgl",
    "canvas",
    "interactive",
    "smart",
    "performance",
    "accessibility"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/michaelwybraniec/smart-backgrounds"
  },
  "license": "Apache-2.0",
  "author": "Michael Wybraniec",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "type-check": "turbo run type-check",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules .turbo",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.4",
    "turbo": "^1.12.2",
    "typescript": "^5.3.3"
  },
  "packageManager": "pnpm@8.15.1",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
